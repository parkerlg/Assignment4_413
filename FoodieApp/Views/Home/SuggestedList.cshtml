@{
    ViewBag.Title = "Suggested Restaurants List";
}

@model IEnumerable<FoodieApp.Models.SuggestedRestaurants>

<div style="margin:20px">
    <h5>The following are a list of restaurants that people have suggested.</h5>

    <table class="table">
        <thead>
            <tr><th>Name</th><th>Restaurant Name</th><th>Favorite Dish</th><th>Phone</th></tr>
        </thead>
        <tbody>
            @foreach (FoodieApp.Models.SuggestedRestaurants x in Model)
            {

                <tr>
                    <td>@x.Name</td>
                    <td>@x.RestaurantName</td>
                    <td>@x.FavDish</td>
                    <td>@x.Phone</td>
                </tr>

            }
        </tbody>
    </table>
</div>
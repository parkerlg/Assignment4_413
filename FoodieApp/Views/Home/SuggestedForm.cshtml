@{
    ViewBag.Title = "Suggested Restaurant Form";
}

@model FoodieApp.Models.SuggestedRestaurants;

<h3 class="m-3">Enter the information for a restaurant you would suggest to people new in Provo.</h3>

<form asp-action="SuggestedForm" amethod="post" style="padding: 20px;">
    <div asp-validation-summary="All">
    </div>
    <div class="form-group">
        <label asp-for="Name">Name: </label>
        <input class="form-control" style="width: 300px;" asp-for="Name"/>
    </div>
    <div class="form-group">
        <label asp-for="RestaurantName">Restaurant Name: </label>
        <input class="form-control" style="width: 300px;" asp-for="RestaurantName" />
    </div>
    <div class="form-group">
        <label asp-for="FavDish">Favorite Dish: </label>
        <input class="form-control" style="width: 300px;" asp-for="FavDish" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Restaurant Phone #: </label>
        <input class="form-control" style="width: 300px;" asp-for="Phone" />
    </div>
    
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
